//Task:shortcut to run a java file which will take input and show output of the programme automatically with programme runtime status such as memory consume and execution time
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile and run Java Code",
            "type": "shell",
            "command": "",
            "args": [
                "/usr/bin/time",
                "-v",
                "--output",
                "sys.txt",
                "timeout",
                "5",
                "javac",
                "${relativeFile}",
                "-d",
                "${workspaceFolder}",
                "&&",
                "java",
                "${fileBasenameNoExtension}",
                "<",
                "input.txt",
                ">",
                "output.txt",
                "&&",
                "rm",
                "-rf",
                "*.class"
            ],
            "presentation": {
                "reveal": "silent"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "java",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        }
    ]
}